<Window x:Class="CarDirectoryTestApp.CarDirectory.Views.AddDocument_GUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Добавление документа" Name="DocumentWindow" Height="128" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label Content="Как вы хотите открыть справочник автомобилей?" HorizontalAlignment="Left" Margin="5,19,0,0" VerticalAlignment="Top"/>
        <Button Content="Новый справочник" HorizontalAlignment="Left" Margin="20,49,0,0" VerticalAlignment="Top" Height="26" Width="116" Command="{Binding ContinueCommand}" 
                CommandParameter="{Binding ElementName=DocumentWindow}"/>
        <Button Content="Открыть файл" HorizontalAlignment="Left" Margin="160,49,0,0" VerticalAlignment="Top" Height="26" Width="116" Command="{Binding OpenFileDialogCommand}" 
                CommandParameter="{Binding ElementName=DocumentWindow}"/>

    </Grid>
</Window>
